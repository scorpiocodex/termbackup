# TermBackup EditorConfig
# https://editorconfig.org

root = true

# ── Defaults ──────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ── Python ────────────────────────────────────────────────
[*.py]
indent_size = 4
max_line_length = 120

# ── YAML / TOML / JSON ───────────────────────────────────
[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 4

# ── Markdown ──────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# ── Makefile ──────────────────────────────────────────────
[Makefile]
indent_style = tab

# ── Shell Scripts ─────────────────────────────────────────
[*.sh]
indent_size = 2
end_of_line = lf

# ── GitHub Actions ────────────────────────────────────────
[.github/workflows/*.yml]
indent_size = 2
